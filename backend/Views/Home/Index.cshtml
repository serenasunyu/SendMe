@model List<SendMeApp.Models.Message>

<!DOCTYPE html>
<html>
<head>
    <title> SendMe App</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/site.js"></script>
</head>

<body>
    <nav class="navbar">
        <div class="navbar_left">
            <a href="#">
                <img src="../../wwwroot/images/logo.svg" alt="Logo" class="logo">
                <span>SendMe</span>
            </a>
        </div>
        <div class="navbar_right">
            <img src="../../wwwroot/images/setting.png" alt="Setting" class="setting">
        </div>
    </nav>

    <section class="container">
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Send" id="sendForm">
            <textarea name="text" id="text-input" placeholder="Enter your text here"></textarea>
            <button>Upload</button>
            <button>Send</button>
        </form>
    </section>

    <section class="history">
        @foreach (var message in Model)
        {

            <div class="message">
                <p>@message.Date</p>
                <p>@message.Text</p>
                @if (!string.IsNullOrEmpty(message.ImageUrl))
                {
                    <img src="@message.ImageUrl" alt="Image" class="history_image">
                    <a href="@message.ImageUrl" download>Download</a>
                }
            </div>
        }
    </section>

</body>
</html>